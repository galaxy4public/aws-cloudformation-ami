			"Type": "AWS::SQS::QueuePolicy",
			"Properties": {
				"PolicyDocument": {
					"Version": "2008-10-17",
					"Id": { "Fn::Join": [ "/", [ { "Fn::GetAtt" : [ "Queue", "Arn" ] }, "QueuePolicy" ] ] },
					"Statement": [
