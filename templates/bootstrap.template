		},
		"SnsTopic": {
			"Condition": "useQueue",
			"Type": "AWS::SNS::Topic",
			"Properties": {
				"Subscription": [
				{
					"Endpoint": { "Fn::GetAtt" : [ "Queue", "Arn" ] },
					"Protocol" : "sqs"
				}
				]
			}
		},
		"AmiQueue": {
			"Condition": "useQueue",
			"Type": "Custom::Ami",
			"Properties": {
				"ServiceToken": { "Ref": "SnsTopic" },
				"JSON": { "Fn::GetAtt": [ "BootstrapWaitCondition", "Data" ] }
			}
		}
	},
	"Outputs": {
		"AmiId": {
			"Value": {
				"Fn::If": [
					"useLambda",
					{ "Fn::GetAtt": [ "AmiLambda", "AmiId" ] },
					{
						"Fn::If": [
							"useQueue",
							{ "Fn::GetAtt": [ "AmiQueue", "AmiId" ] },
