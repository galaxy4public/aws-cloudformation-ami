							},
							{
								"Fn::Join": [ "", [
									"curl -qsS4f --retry 180 --retry-delay 1 'https://raw.githubusercontent.com/galaxy4public/aws-cloudformation-ami/development/bootstrap/bootstrap.sh' -o /root/bootstrap.sh\n"
